

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  username      String?
  password      String?
  email         String?   @unique
  emailVerified DateTime?
  avatar         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          Role  @default(READER)
  books         Book[]
  profile       Profile?
}

model Profile {
  id            String  @id @default(cuid()) @map("_id")
  bio           String?
  penName       String?
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id])
}

model Book {
    id            String    @id @default(cuid()) @map("_id")
    title         String
    cover         String?
    pageCount     Int
    isbn          String
    publisher     String
    genres        String[]
    description   String
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
    userId        String  
    user          User   @relation(fields: [userId], references: [id])
}

enum Role {
  READER
  AUTHOR
}